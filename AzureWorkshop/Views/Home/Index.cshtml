@model AzureWorkshop.Controllers.Home.HomeViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.PageTitle</title>
</head>
<body>
<div>
    <h1>@Model.PageTitle</h1>

    <table>
        <thead>
        <tr>
            <th>Země</th>
            <th>Měna</th>
            <th>Množství</th>
            <th>Kód</th>
            <th>Kurz</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var exchange in Model.Exchanges)
        {
            <tr>
                <td>@exchange.Country</td>
                <td>@exchange.Currency</td>
                <td>@exchange.Amount.ToString("N2")</td>
                <td>@exchange.Code</td>
                <td>@exchange.ExchangeRate.ToString("N2")</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<style>
    table { border: 1px #aaa solid; width: 50%; background: #f5f5f5; }
    table tr td { border: 1px #aaa solid; padding: 2px; background:#ffffff; }
</style>

</body>
</html>
